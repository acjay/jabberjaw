{
  "compilerOptions": {
    "lib": ["deno.window"],
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "tasks": {
    "dev": "deno run --allow-net --allow-read --allow-env --watch --no-check src/main.ts",
    "start": "deno run --allow-net --allow-read --allow-env --no-check src/main.ts",
    "test": "deno test --allow-net --allow-read --allow-env --parallel --no-check",
    "test:unit": "deno test --allow-net --allow-read --allow-env --no-check src/",
    "test:e2e": "deno test --allow-net --allow-read --allow-env --no-check test/",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check"
  },
  "imports": {
    "@danet/core": "jsr:@danet/core@^2.9.5",
    "@std/http": "jsr:@std/http@^1.0.21",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.5",
    "@std/assert": "jsr:@std/assert@^1.0.15",
    "@std/testing": "jsr:@std/testing@^1.0.16"
  }
}
